						<Bar id="bar0">
							<contentLeft>
								<Button xmlns="sap.m" text="New Game" id="new"/>
							</contentLeft>
						</Bar>
						<grid:CSSGrid id="board" gridTemplateColumns="repeat(3, 1fr)" gridTemplateRows="repeat(3, 150px)" gridGap="0.5rem">
							<grid:items>
								<VBox class="demoBox">
									<Title text="A Box" wrapping="true" />
									 <sap.ui.core:Icon src="sap-icon://decline" size="5em" xmlns:sap.ui.core="sap.ui.core" id="icon1"/>
								</VBox>
								<VBox class="demoBox">
									<Title text="A Box" wrapping="true" />
									<sap.ui.core:Icon src="sap-icon://circle-task" size="5em" xmlns:sap.ui.core="sap.ui.core" id="icon2"/>
								</VBox>
								<VBox class="demoBox">
									<Title text="A Box" wrapping="true" />
								</VBox>
								<VBox class="demoBox">
									<Title text="A Box" wrapping="true" />
								</VBox>
								<VBox class="demoBox">
									<Title text="A Box" wrapping="true" />
								</VBox>
								<VBox class="demoBox">
									<Title text="A Box" wrapping="true" />
								</VBox>
								<VBox class="demoBox">
									<Title text="A Box" wrapping="true" />
								</VBox>
								<VBox class="demoBox">
									<Title text="A Box" wrapping="true" />
								</VBox>
								<VBox class="demoBox">
									<Title text="A Box" wrapping="true" />
								</VBox>
							</grid:items>
						</grid:CSSGrid>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>